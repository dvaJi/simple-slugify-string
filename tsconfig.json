{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015",
      "es2015.promise",
      "es2017"
    ]
  },
  "include": [
    "src"
  ]
}
